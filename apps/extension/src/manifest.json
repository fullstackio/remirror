{
  "manifest_version": 2,
  "name": "Remirror",
  "version": "18.8.26.2106",
  "version_name": "0.0.0",
  "description": "Support great people and organisations",
  "author": "Ifiok Jr.",
  "homepage_url": "https://remirror.com/extension",
  "minimum_chrome_version": "60",
  "applications": {
    "gecko": {
      "id": "addon@remirror.com",
      "strict_min_version": "50.0"
    },
    "edge": {
      "browser_action_next_to_addressbar": true
    }
  },
  "browser_action": {
    "default_title": "Pledge",
    "default_icon": "assets/logo.png",
    "default_popup": "templates/popup.html",
    "browser_style": true
  },
  "permissions": ["activeTab", "identity", "notifications", "https://api.github.com/*"],
  "optional_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "128": "assets/icon-128.png"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "templates/options.html"
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "inject-on-install.js", "background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["templates/*", "*.js"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://github.com/*", "https://gist.github.com/*"],
      "css": ["styles/content.css"],
      "js": ["browser-polyfill.min.js", "content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
