{
  "private": true,
  "name": "browser-extension",
  "description": "A browser extension for augmenting the github issue editor",
  "license": "MIT",
  "author": "Ifiok Jr.",
  "repository": "https://github.com/ifiokjr/remirror/tree/apps/extension",
  "version": "0.0.1-alpha.11",
  "main": "index.js",
  "scripts": {
    "_build": "webpack -p --config=../../support/webpack/extension.config.mjs",
    "_lint": "tslint -p tsconfig.json -c ../../tslint.json",
    "_typecheck": "tsc -p tsconfig.json",
    "prebuild": "run-s clean lint typecheck",
    "clean": "rimraf dist",
    "dev": "run-p dev:*",
    "dev:build": "NODE_ENV=development webpack --watch --config=../../support/webpack/extension.config.mjs",
    "release": "run-s build update-version save-url release:*",
    "release:amo": "cd dist && web-ext-submit",
    "release:cws": "cd dist && webstore upload --auto-publish",
    "update-version": "run-s update-version:*",
    "update-version:name": "VERSION_NAME=$(dot-json package.json version) && echo Version Name: $VERSION_NAME && dot-json dist/manifest.json version_name $VERSION_NAME && dot-json src/manifest.json version_name $VERSION_NAME",
    "update-version:utc": "VERSION=$(utc-version) && echo $VERSION && dot-json dist/manifest.json version $VERSION && dot-json src/manifest.json version $VERSION"
  },
  "dependencies": {
    "@remirror/core": "0.0.1-alpha.11",
    "date-fns": "2.0.0-alpha.27",
    "dom-chef": "3.6.0",
    "dom-loaded": "1.2.0",
    "element-ready": "3.1.0",
    "firebase": "5.11.1",
    "github-reserved-names": "1.1.5",
    "ramda": "0.26.1",
    "react": "16.8.6",
    "react-dock": "0.2.4",
    "react-dom": "16.8.6",
    "react-hot-loader": "4.8.4",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "webext-inject-on-install": "1.0.2",
    "webext-redux": "2.0.2",
    "webextension-polyfill-ts": "0.9.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.83",
    "@types/copy-webpack-plugin": "4.4.4",
    "@types/element-ready": "2.1.1",
    "@types/extract-text-webpack-plugin": "3.0.4",
    "@types/glob": "7.1.1",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/webpack": "4.4.29",
    "chrome-webstore-upload-cli": "1.2.0",
    "copy-webpack-plugin": "5.0.3",
    "dot-json": "1.1.0",
    "extract-text-webpack-plugin": "3.0.2",
    "glob": "7.1.3",
    "html-webpack-exclude-empty-assets-plugin": "0.1.1",
    "html-webpack-plugin": "3.2.0",
    "jest-webextension-mock": "3.5.0",
    "purifycss-webpack": "0.7.0",
    "web-ext-submit": "3.0.0",
    "webpack": "4.30.0",
    "webpack-chrome-extension-reloader": "1.3.0"
  }
}
