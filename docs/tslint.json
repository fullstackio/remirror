{
  "extends": "../tslint.json",
  "rules": {
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "jest-axe",
        "jest",
        "jest-cli",
        "jest-dom",
        "jest-emotion",
        "emotion",
        "react-testing-library",
        "puppeteer",
        "puppeteer-to-istanbul",
        "jest-extended",
        "prosemirror-test-builder",
        "jest-matcher-utils",
        "jest-image-snapshot",
        "chalk",
        "yargs",
        "enzyme",
        "enzyme-adapter-react-16",
        "jest-remirror",
        "jest-prosemirror",
        "react",
        "@fonts",
        "@images",
        "@components",
        "@styles",
        "@styled",
        "min-document",
        "@remirror/core",
        "@remirror/core-extensions",
        "@remirror/react",
        "@remirror/extension-epic-mode",
        "@remirror/ui-wysiwyg"
      ]
    ],
    "no-namespace": false,
    "no-submodule-imports": [
      true,
      "@fonts",
      "@images",
      "@components",
      "@styles",
      "@styled",
      "react-testing-library",
      "emoji-regex/es2015/text",
      "react-dom/server",
      "emoji-mart",
      "react-feather",
      "prismjs",
      "refractor",
      "jest-dom"
    ]
  }
}
